<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:background="@drawable/white_rectangle">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_star_outline_24"
            android:text="즐겨찾기"
            android:textSize="9dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/arrival_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_location_on_24"
            android:text="도착"
            android:gravity="center"
            android:textSize="9dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="5dp"
        android:background="#ff7f7f7f"/>

    <TextView
        android:id="@+id/stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stat"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/call_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="callnumber"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/bnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bnm"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/busiNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="busiNm"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/busiCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="busiCall"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="note"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/limitYn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="limitYn"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/limitDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="limitDetail"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/statUpdDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="statUpdDt"
        android:layout_margin="5dp"
        android:textColor="#ff7f7f7f"/>

</LinearLayout>